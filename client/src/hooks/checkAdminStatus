// Assuming this file is located at src/services/checkAdminStatus.js
import axios from 'axios';

const checkAdminStatus = async () => {
  try {
    const response = await axios.get(`${process.env.REACT_APP_BACKEND_URL}/api/user/admin`, {
      withCredentials: true // Include this to send cookies with the request
    });
    return response.data; // Assuming the response includes data indicating admin status
  } catch (error) {
    throw error;
  }
};

export default checkAdminStatus;
